{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="registration-form-container">
            <h1 class="mb-4">Вход в систему</h1>

            <form method="post" action="{{ path('login') }}">
                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Пароль</label>
                    <input type="password" name="_password" id="password" class="form-control">
                </div>

                <button type="submit" class="btn btn-primary w-50">Войти</button>
            </form>
        </div>
    </div>
{% endblock %}

