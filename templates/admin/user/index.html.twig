{% extends 'base.html.twig' %}

{% block title %}Пользователи{% endblock %}

{% block body %}
    <h1>Пользователи</h1>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('admin_user_view', { id: user.id }) }}" class="btn btn-sm btn-primary">Просмотр</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Пользователей не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}